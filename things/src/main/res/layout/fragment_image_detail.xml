<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/indent_8"
    android:paddingEnd="@dimen/indent_16"
    tools:ignore="RtlSymmetry">

    <FrameLayout
        android:id="@+id/close_image_container"
        android:layout_width="match_parent"
        android:paddingStart="@dimen/indent_16"
        android:paddingEnd="@dimen/indent_16"
        android:layout_height="?attr/actionBarSize"
        android:background="#60000000">

        <ImageView
            android:id="@+id/close_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/content_description_detail_view_close"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/detail_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="@string/detail_image_view_transition"
        android:contentDescription="@string/content_description_detail_view"/>

</LinearLayout>